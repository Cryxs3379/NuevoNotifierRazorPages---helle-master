        // Funci√≥n para revalidar cache en background
        async function revalidateInBackground(tabKey) {
            // Esta funci√≥n se llama cuando hay cache v√°lido para revalidar silenciosamente
            try {
                let endpoint = '';
                switch (tabKey) {
                    case 'outgoing24h':
                        endpoint = `${apiBaseUrlForTabs}/api/v1/calls/views/outgoing-24h`;
                        break;
                    case 'incomingNo24h':
                        endpoint = `${apiBaseUrlForTabs}/api/v1/calls/views/incoming-noatendidas-24h`;
                        break;
                    case 'incomingOk24h':
                        endpoint = `${apiBaseUrlForTabs}/api/v1/calls/views/incoming-atendidas-24h`;
                        break;
                    default:
                        return;
                }

                const response = await fetch(endpoint);
                if (response.ok) {
                    const data = await response.json();
                    if (Array.isArray(data)) {
                        // Actualizar cache si los datos cambiaron
                        const cached = tabDataCache[tabKey];
                        if (!cached || JSON.stringify(cached.data) !== JSON.stringify(data)) {
                            tabDataCache[tabKey] = { data, fetchedAt: Date.now() };
                            console.log(`üîÑ Cache revalidado en background para ${tabKey}`);
                        }
                    }
                }
            } catch (error) {
                // Silenciar errores en revalidaci√≥n background
                console.debug(`Revalidaci√≥n background fall√≥ para ${tabKey}:`, error);
            }
        }

        // Funci√≥n para cargar datos de una pesta√±a
        async function loadTabData(tabKey, forceRefresh = false) {
            // Abortar request anterior si existe
            if (abortControllers[tabKey]) {
                abortControllers[tabKey].abort();
                console.log(`üõë Request anterior cancelado para ${tabKey}`);
            }

            let endpoint = '';
            let tbodyId = '';
            let tabName = '';

            switch (tabKey) {
                case 'outgoing24h':
                    endpoint = `${apiBaseUrlForTabs}/api/v1/calls/views/outgoing-24h`;
                    tbodyId = 'outgoing24hTableBody';
                    tabName = 'Salientes 24h';
                    break;
                case 'incomingNo24h':
                    endpoint = `${apiBaseUrlForTabs}/api/v1/calls/views/incoming-noatendidas-24h`;
                    tbodyId = 'incomingNo24hTableBody';
                    tabName = 'Entrantes NO atendidas 24h';
                    break;
                case 'incomingOk24h':
                    endpoint = `${apiBaseUrlForTabs}/api/v1/calls/views/incoming-atendidas-24h`;
                    tbodyId = 'incomingOk24hTableBody';
                    tabName = 'Entrantes atendidas 24h';
                    break;
                default:
                    console.warn('‚ö†Ô∏è Tab key no reconocido:', tabKey);
                    return;
            }

            const tbody = document.getElementById(tbodyId);
            if (!tbody) {
                console.error(`‚ùå tbody no encontrado: ${tbodyId}`);
                return;
            }

            // Verificar cache antes de hacer request
            const cached = tabDataCache[tabKey];
            const now = Date.now();

            if (cached && !forceRefresh) {
                const age = now - cached.fetchedAt;
                if (age < CACHE_TTL_MS) {
                    // Cache v√°lido: mostrar instant√°neamente y revalidar en background
                    console.log(`‚ö° Mostrando cache v√°lido para ${tabName} (edad: ${Math.round(age/1000)}s)`);
                    renderTableBody(tbody, cached.data);
                    // Revalidar en background sin bloquear UI
                    revalidateInBackground(tabKey);
                    return;
                } else {
                    // Cache stale: mostrar cache mientras carga datos frescos
                    console.log(`üîÑ Cache stale para ${tabName}, mostrando cache y recargando...`);
                    renderTableBody(tbody, cached.data);
                }
            }

            // Crear nuevo AbortController para este request
            const controller = new AbortController();
            abortControllers[tabKey] = controller;

            // Mostrar loading solo si no hay cache stale
            if (!cached || forceRefresh) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Cargando...</span></div><p class="mt-2 text-muted">Cargando datos...</p></td></tr>';
            }

            try {
                console.log(`üì° Cargando tab ${tabName} (${tabKey})`);
                console.log(`üìç URL: ${endpoint}`);
                console.log(`üåê ApiBaseUrl: ${apiBaseUrlForTabs}`);
                
                const response = await fetch(endpoint, { signal: controller.signal });
                
                console.log(`üìä HTTP Status: ${response.status} ${response.statusText}`);
                console.log(`üìã Content-Type: ${response.headers.get('content-type') || 'N/A'}`);
                
                if (!response.ok) {
                    // Intentar leer el body para m√°s informaci√≥n
                    let errorBody = '';
                    try {
                        const text = await response.text();
                        errorBody = text.substring(0, 200); // Primeros 200 caracteres
                        console.error(`‚ùå Response body:`, errorBody);
                    } catch (e) {
                        console.error(`‚ùå No se pudo leer response body:`, e);
                    }
                    
                    throw new Error(`HTTP ${response.status}: ${response.statusText}${errorBody ? ` - ${errorBody}` : ''}`);
                }

                // Verificar que sea JSON
                const contentType = response.headers.get('content-type');
                if (!contentType || !contentType.includes('application/json')) {
                    const text = await response.text();
                    console.error(`‚ùå Response no es JSON. Content-Type: ${contentType}`);
                    console.error(`‚ùå Response body (primeros 500 chars):`, text.substring(0, 500));
                    throw new Error(`El servidor no devolvi√≥ JSON. Content-Type: ${contentType}`);
                }

                const data = await response.json();
                console.log(`‚úÖ Datos cargados: ${Array.isArray(data) ? data.length : 'N/A'} registros`);
                
                if (!Array.isArray(data)) {
                    console.error(`‚ùå Response no es un array:`, typeof data, data);
                    throw new Error('El servidor no devolvi√≥ un array de datos');
                }

                // Cachear datos con timestamp
                tabDataCache[tabKey] = { data, fetchedAt: Date.now() };

                // Renderizar filas
                renderTableBody(tbody, data);
                console.log(`‚úÖ ${data.length} filas renderizadas en ${tabName}`);
            } catch (error) {
                // Si el error es por cancelaci√≥n, no mostrar error (fue cancelado intencionalmente)
                if (error.name === 'AbortError') {
                    console.log(`üõë Request cancelado para ${tabName} (${tabKey})`);
                    return; // Salir silenciosamente
                }

                console.error(`‚ùå Error cargando ${tabName} (${tabKey}):`, error);
                console.error(`üìç Endpoint fallido: ${endpoint}`);
                console.error(`üåê ApiBaseUrl usado: ${apiBaseUrlForTabs}`);
                
                let errorMessage = error.message || 'Error desconocido';
                
                // Detectar errores comunes
                if (errorMessage.includes('404')) {
                    errorMessage = `Endpoint no encontrado (404). Verifica que Notifier-APiCalls est√© corriendo en ${apiBaseUrlForTabs}`;
                } else if (errorMessage.includes('CORS') || errorMessage.includes('Failed to fetch')) {
                    errorMessage = `Error de CORS o conexi√≥n. Verifica que ${apiBaseUrlForTabs} permita requests desde este origen.`;
                } else if (errorMessage.includes('JSON')) {
                    errorMessage = `El servidor no devolvi√≥ JSON v√°lido. Verifica el endpoint.`;
                }
                
                tbody.innerHTML = `
                    <tr>
                        <td colspan="4" class="text-center py-4">
                            <div class="alert alert-danger mb-0">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <strong>Error al cargar datos</strong><br>
                                <small>${errorMessage}</small>
                                <br><br>
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="loadTabData('${tabKey}')">
                                    <i class="bi bi-arrow-clockwise"></i> Reintentar
                                </button>
                            </div>
                        </td>
                    </tr>`;
            }
        }

        // Funci√≥n para refrescar la pesta√±a activa
        function refreshActiveTab() {
            if (activeTab === 'historico') {
                refreshCallsPartial();
            } else {
                // Forzar recarga limpiando cache
                loadTabData(activeTab, true);
            }
        }

        // Event listeners para las pesta√±as
        document.querySelectorAll('[data-tab-key]').forEach(tab => {
            tab.addEventListener('shown.bs.tab', function (e) {
                const tabKey = e.target.getAttribute('data-tab-key');
                const previousTab = activeTab;
                activeTab = tabKey;
                console.log(`üìë Pesta√±a activa cambiada de ${previousTab} a ${tabKey}`);

                // Cancelar requests pendientes de la pesta√±a anterior (si no es hist√≥rico)
                if (previousTab && previousTab !== 'historico' && abortControllers[previousTab]) {
                    abortControllers[previousTab].abort();
                    console.log(`üõë Requests cancelados para pesta√±a anterior: ${previousTab}`);
                }

                // Ocultar/mostrar filter bar solo para hist√≥rico
                const filterBar = document.getElementById('historicoFilterBar');
                if (filterBar) {
                    filterBar.style.display = tabKey === 'historico' ? 'block' : 'none';
                }

                // Resetear contador cuando se cambia a hist√≥rico
                if (tabKey === 'historico') {
                    newCallsCount = 0;
                    const badge = document.getElementById('historicoBadge');
                    if (badge) {
                        badge.style.display = 'none';
                    }
                }

                // Cargar datos si no est√°n en cache (excepto hist√≥rico que ya est√° cargado)
                if (tabKey !== 'historico' && !tabDataCache[tabKey]) {
                    loadTabData(tabKey);
                }
            });
        });
    </script>
