            phoneSpan.appendChild(document.createTextNode(' ' + phoneNumber));
            tdPhone.appendChild(phoneSpan);

            const tdNombreCompleto = document.createElement('td');
            tdNombreCompleto.textContent = nombreCompleto || 'N/A';

            const tdNombrePila = document.createElement('td');
            tdNombrePila.textContent = nombrePila || 'N/A';

            tr.appendChild(tdDate);
            tr.appendChild(tdPhone);
            tr.appendChild(tdNombreCompleto);
