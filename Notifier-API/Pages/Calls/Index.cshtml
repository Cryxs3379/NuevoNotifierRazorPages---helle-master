            const nombrePila = item.nombrePila ?? item.NombrePila ?? 'N/A';

            // Formatear fecha: dd/MM/yyyy HH:mm:ss (desde UTC, convertir a zona horaria Espa√±a)
            let dateStr = 'N/A';
            if (dateAndTime) {
                try {
                    const date = new Date(dateAndTime);
                    if (!isNaN(date.getTime())) {
                        dateStr = date.toLocaleString('es-ES', {
                            day: '2-digit',
                            month: '2-digit',
                            year: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit',
                            second: '2-digit',
                            timeZone: 'Europe/Madrid'
