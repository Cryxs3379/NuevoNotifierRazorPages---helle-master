            return tr;
        }

        // Funci√≥n para renderizar una fila de las vistas (4 columnas) - Mantener para compatibilidad
        function renderViewRow(item) {
            // Normalizar camelCase vs PascalCase
            const dateAndTime = item.dateAndTime ?? item.DateAndTime;
            const phoneNumber = item.phoneNumber ?? item.PhoneNumber ?? 'N/A';
            const nombreCompleto = item.nombreCompleto ?? item.NombreCompleto ?? 'N/A';
            const nombrePila = item.nombrePila ?? item.NombrePila ?? 'N/A';

            // Formatear fecha: dd/MM/yyyy HH:mm:ss (desde UTC, convertir a zona horaria Espa√±a)
            let dateStr = 'N/A';
            if (dateAndTime) {
