@section Scripts {
    <!-- SignalR Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    
    <script>
        // Auto-refresh cada 30 segundos (opcional)
        // setTimeout(() => window.location.reload(), 30000);

        // Funci√≥n para formatear tiempo relativo
        function formatRelativeTime(dateTime) {
            const date = new Date(dateTime);
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);
            
            if (minutes < 1) return "Hace unos segundos";
            if (minutes < 60) return `Hace ${minutes} min`;
            if (hours < 24) return `Hace ${hours}h`;
            if (days < 7) return `Hace ${days}d`;
            
            return date.toLocaleString('es-ES', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // Funci√≥n para renderizar una fila de llamada
        function renderCallRow(call) {
            // Normalizar camelCase vs PascalCase
            const id = call.id ?? call.Id ?? 0;
            const dateAndTime = call.dateAndTime ?? call.DateAndTime;
            const phoneNumber = call.phoneNumber ?? call.PhoneNumber ?? '';
            const statusText = call.statusText ?? call.StatusText ?? 'N/A';
            
            const date = new Date(dateAndTime);
            const dateStr = date.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' });
            const timeStr = date.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            
            return `
                <tr data-call-id="${id}">
                    <td class="col-datetime">
                        <div title="${dateAndTime}">
                            <strong>${dateStr}</strong><br>
                            <small class="text-muted">${timeStr}</small>
                        </div>
                    </td>
                    <td class="col-phone">
                        <span class="phone-number">
                            <i class="bi bi-telephone-fill text-muted"></i>
                            ${phoneNumber}
                        </span>
                    </td>
                    <td class="col-status">
                        <span class="badge bg-info">${statusText}</span>
                    </td>
                </tr>`;
        }

        // ============================================
        // Debounce/Throttle para refrescos
        // ============================================
        let refreshTimeout = null;
        let isRefreshing = false;
        let pendingRefresh = false;

        // Funci√≥n para refrescar llamadas parcialmente (con protecci√≥n contra m√∫ltiples ejecuciones)
        async function refreshCallsPartial() {
            // Si ya hay un refresh en curso, marcar como pendiente
            if (isRefreshing) {
                pendingRefresh = true;
                return;
            }

            isRefreshing = true;
            const tbody = document.getElementById('callsTableBody');
            const loadingRow = document.getElementById('loadingRow');
            const errorRow = document.getElementById('errorRow');
            const refreshBtn = document.getElementById('refreshCallsBtn');
            const refreshIcon = document.getElementById('refreshCallsIcon');
            
            if (!tbody) {
                isRefreshing = false;
                if (pendingRefresh) {
                    pendingRefresh = false;
                    refreshCallsPartial();
                }
                return;
            }

            // Ocultar error si existe
            if (errorRow) errorRow.style.display = 'none';
            
            // Mostrar loading
            if (loadingRow) loadingRow.style.display = 'table-row';
            if (refreshBtn) refreshBtn.disabled = true;
            if (refreshIcon) refreshIcon.classList.add('spinner-border', 'spinner-border-sm');
            
            // Ocultar todas las filas de datos temporalmente
            const dataRows = tbody.querySelectorAll('tr:not(#loadingRow):not(#errorRow)');
            dataRows.forEach(row => row.style.display = 'none');

            try {
                // Obtener l√≠mite actual
                const urlParams = new URLSearchParams(window.location.search);
                const limit = urlParams.get('limit') || '100';

                // Actualizar estad√≠sticas
                const statsResponse = await fetch('/api/v1/calls/stats');
                if (statsResponse.ok) {
                    const stats = await statsResponse.json();
                    const totalEl = document.getElementById('statsTotal');
                    const todayEl = document.getElementById('statsToday');
                    const weekEl = document.getElementById('statsWeek');
                    const lastCallEl = document.getElementById('statsLastCall');
                    
                    if (totalEl) totalEl.textContent = stats.totalMissedCalls || 0;
                    if (todayEl) todayEl.textContent = stats.todayMissedCalls || 0;
                    if (weekEl) weekEl.textContent = stats.thisWeekMissedCalls || 0;
                    
                    if (lastCallEl && stats.lastMissedCall) {
                        try {
                            const lastCall = typeof stats.lastMissedCall === 'string' 
                                ? JSON.parse(stats.lastMissedCall) 
                                : stats.lastMissedCall;
                            if (lastCall.dateAndTime) {
                                const lastCallDate = new Date(lastCall.dateAndTime);
                                lastCallEl.textContent = formatRelativeTime(lastCallDate);
                            }
                        } catch (e) {
                            lastCallEl.textContent = 'N/A';
                        }
                    }
                }

                // Actualizar tabla de llamadas
                const callsResponse = await fetch(`/api/v1/calls/missed?limit=${encodeURIComponent(limit)}`);
                
                if (!callsResponse.ok) {
                    throw new Error(`HTTP ${callsResponse.status}: ${callsResponse.statusText}`);
                }

                const callsData = await callsResponse.json();
                
                // Limpiar tbody (excepto loading/error rows)
                dataRows.forEach(row => row.remove());
                
                // Renderizar nuevas filas
                if (callsData.data && callsData.data.length > 0) {
                    callsData.data.forEach(call => {
                        const row = renderCallRow(call);
                        tbody.insertAdjacentHTML('beforeend', row);
                    });
                } else {
                    tbody.insertAdjacentHTML('beforeend', '<tr><td colspan="3" class="text-center py-4 text-muted">No hay llamadas perdidas</td></tr>');
                }
                
                // Inicializar tooltips
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
                
                // Ocultar loading
                if (loadingRow) loadingRow.style.display = 'none';
                
            } catch (error) {
                console.error('Error refreshing calls:', error);
                
                // Mostrar error
                if (errorRow) {
                    const errorText = document.getElementById('errorMessageText');
                    if (errorText) {
                        errorText.textContent = `Error al cargar llamadas: ${error.message}`;
                    }
                    errorRow.style.display = 'table-row';
                }
                
                // Restaurar filas ocultas
                dataRows.forEach(row => row.style.display = '');
                
            } finally {
                // Restaurar bot√≥n
                if (loadingRow) loadingRow.style.display = 'none';
                if (refreshBtn) refreshBtn.disabled = false;
                if (refreshIcon) refreshIcon.classList.remove('spinner-border', 'spinner-border-sm');
                
                // Marcar refresh como completado
                isRefreshing = false;
                
                // Si hay un refresh pendiente, ejecutarlo ahora
                if (pendingRefresh) {
                    pendingRefresh = false;
                    refreshCallsPartial();
                }
            }
        }

        // Funci√≥n debounced para refrescar llamadas (usa buffer de 500ms)
        function debouncedRefreshCalls() {
            clearTimeout(refreshTimeout);
            refreshTimeout = setTimeout(() => {
                refreshCallsPartial();
            }, 500);
        }

        // SignalR Connection para actualizaciones en tiempo real
        // Conectar al hub de Notifier-APiCalls (puerto 5001)
        const apiBaseUrl = "@Model.ApiBaseUrl".replace(/\/$/, "");
        const hubUrl = `${apiBaseUrl}/hubs/messages`;
        
        console.log("üîå Iniciando conexi√≥n SignalR a:", hubUrl);
        console.log("üìç ApiBaseUrl desde Model:", "@Model.ApiBaseUrl");
        
        const callsConnection = new signalR.HubConnectionBuilder()
            .withUrl(hubUrl)
            .withAutomaticReconnect()
            .build();

        // Funci√≥n para actualizar solo las estad√≠sticas (sin refrescar tabla)
        async function refreshStatsOnly() {
            try {
                console.log("üìä Actualizando stats silenciosamente...");
                const response = await fetch('/api/v1/calls/stats');
                if (!response.ok) {
                    console.warn("‚ö†Ô∏è Error al obtener stats:", response.status);
                    return;
                }
                
                const stats = await response.json();
                const totalEl = document.getElementById('statsTotal');
                const todayEl = document.getElementById('statsToday');
                const weekEl = document.getElementById('statsWeek');
                const lastCallEl = document.getElementById('statsLastCall');
                
                if (totalEl) totalEl.textContent = stats.totalMissedCalls || 0;
                if (todayEl) todayEl.textContent = stats.todayMissedCalls || 0;
                if (weekEl) weekEl.textContent = stats.thisWeekMissedCalls || 0;
                
                if (lastCallEl && stats.lastMissedCall) {
                    try {
                        const lastCall = typeof stats.lastMissedCall === 'string' 
                            ? JSON.parse(stats.lastMissedCall) 
                            : stats.lastMissedCall;
                        if (lastCall.dateAndTime) {
                            const lastCallDate = new Date(lastCall.dateAndTime);
                            lastCallEl.textContent = formatRelativeTime(lastCallDate);
                        }
                    } catch (e) {
                        lastCallEl.textContent = 'N/A';
                    }
                }
                console.log("‚úÖ Stats actualizados");
            } catch (error) {
                console.error('‚ùå Error actualizando stats:', error);
            }
        }

        // ============================================
        // Sistema de pesta√±as y carga bajo demanda
        // ============================================
        const CACHE_TTL_MS = 30000; // 30 segundos
        let activeTab = 'historico';
        let tabDataCache = {
            outgoing24h: null,
            incomingNo24h: null,
            incomingOk24h: null
        };
        let newCallsCount = 0; // Contador de nuevas llamadas cuando no est√° en hist√≥rico
        const abortControllers = {}; // AbortController por pesta√±a para cancelar requests

        // Escuchar evento NewMissedCall (actualizaci√≥n en tiempo real sin refresh)
        callsConnection.on("NewMissedCall", (call) => {
            try {
                console.log("üì® NewMissedCall recibido:", call);
                
                // Si estamos en hist√≥rico, procesar normalmente
                if (activeTab === 'historico') {
                    const tbody = document.getElementById("callsTableBody");
                    if (!tbody) {
                        console.error("‚ùå callsTableBody no encontrado, usando fallback");
                        refreshCallsPartial();
                        return;
                    }

                    // Normalizar camelCase vs PascalCase
                    const id = call.id ?? call.Id ?? 0;
                    console.log("üîç Verificando duplicado para ID:", id);
                    
                    // Evitar duplicados si ya existe
                    const existing = tbody.querySelector(`tr[data-call-id="${id}"]`);
                    if (existing) {
                        console.log(`‚è≠Ô∏è Llamada ${id} ya existe en la tabla, saltando (actualizando stats)`);
                        refreshStatsOnly(); // Actualizar stats aunque sea duplicado
                        return;
                    }

                    console.log("‚úÖ Insertando nueva llamada ID:", id);
                    
                    // Renderizar y insertar al inicio
                    const rowHtml = renderCallRow(call);
                    tbody.insertAdjacentHTML("afterbegin", rowHtml);

                    // Limitar n√∫mero de filas (mantener solo las m√°s recientes)
                    const maxRows = 100; // Ajustar seg√∫n necesidad
                    const allRows = tbody.querySelectorAll('tr:not(#loadingRow):not(#errorRow)');
                    if (allRows.length > maxRows) {
                        console.log(`‚úÇÔ∏è Limpiando filas antiguas (manteniendo ${maxRows} m√°s recientes)`);
                        // Eliminar las filas m√°s antiguas (al final)
                        for (let i = allRows.length - 1; i >= maxRows; i--) {
                            allRows[i].remove();
                        }
                    }

                    // Actualizar stats silenciosamente
                    refreshStatsOnly();
                    
                    console.log(`‚úÖ Nueva llamada ${id} insertada en la tabla`);
                } else {
                    // Si no estamos en hist√≥rico, incrementar contador y mostrar badge
                    newCallsCount++;
                    const badge = document.getElementById('historicoBadge');
                    if (badge) {
                        badge.textContent = newCallsCount;
                        badge.style.display = 'inline';
                    }
                    console.log(`üìä Nueva llamada recibida (no en hist√≥rico). Total pendientes: ${newCallsCount}`);
                }
            } catch (e) {
                console.error("‚ùå Error aplicando NewMissedCall, usando fallback refreshCallsPartial()", e);
                if (activeTab === 'historico') {
                    refreshCallsPartial();
                }
            }
        });

        // Escuchar evento CallsUpdated (fallback/compatibilidad)
        callsConnection.on("CallsUpdated", () => {
            console.log("üì® CallsUpdated recibido via SignalR (fallback)");
            
            // Usar debounce para evitar m√∫ltiples refrescos si llegan varios eventos seguidos
            debouncedRefreshCalls();
        });

        // Escuchar evento CallViewsUpdated (actualizaci√≥n de vistas 24h despu√©s de ProcessNotifierCalls)
        callsConnection.on("CallViewsUpdated", () => {
            console.log("üì® CallViewsUpdated recibido via SignalR");
            
            // Invalidar cache de las 3 vistas 24h
            tabDataCache.outgoing24h = null;
            tabDataCache.incomingNo24h = null;
            tabDataCache.incomingOk24h = null;
            
            // Si la pesta√±a activa es una de las vistas 24h, refrescar con debounce
            if (activeTab === 'outgoing24h' || activeTab === 'incomingNo24h' || activeTab === 'incomingOk24h') {
                console.log(`üîÑ Refrescando pesta√±a activa ${activeTab} despu√©s de CallViewsUpdated`);
                debouncedRefreshActiveTab();
            } else {
                console.log(`‚ÑπÔ∏è CallViewsUpdated recibido pero pesta√±a activa es ${activeTab}, cache invalidado`);
            }
        });

        // Funci√≥n debounced para refrescar la pesta√±a activa
        let refreshActiveTabTimeout = null;
        function debouncedRefreshActiveTab() {
            clearTimeout(refreshActiveTabTimeout);
            refreshActiveTabTimeout = setTimeout(() => {
                refreshActiveTab();
            }, 500);
        }

        // Iniciar conexi√≥n SignalR
        callsConnection.start()
            .then(() => {
                console.log("‚úÖ SignalR conectado para Calls. Escuchando actualizaciones desde:", hubUrl);
                console.log("üëÇ Escuchando eventos: NewMissedCall, CallsUpdated");
            })
            .catch((err) => {
                console.error("‚ùå Error conectando SignalR para Calls:", err);
                console.error("üìç Hub URL intentada:", hubUrl);
                console.error("üí° Verifica que Notifier-APiCalls est√© corriendo en", apiBaseUrl);
            });

        // Manejar reconexi√≥n
        callsConnection.onreconnecting(() => {
            console.log("üîÑ SignalR reconectando para Calls...");
        });

        callsConnection.onreconnected(() => {
            console.log("‚úÖ SignalR reconectado para Calls");
        });

        callsConnection.onclose(() => {
            console.log("‚ö†Ô∏è Conexi√≥n SignalR cerrada para Calls");
        });

        // ============================================
        // Sistema de pesta√±as y carga bajo demanda
        // ============================================
        const apiBaseUrlForTabs = "@Model.ApiBaseUrl".replace(/\/$/, "");
        console.log("üîß Configuraci√≥n de pesta√±as:");
        console.log("üìç ApiBaseUrl desde Model:", "@Model.ApiBaseUrl");
        console.log("üìç ApiBaseUrl normalizado:", apiBaseUrlForTabs);

        // Funci√≥n para renderizar el cuerpo de la tabla
        function renderTableBody(tbody, data) {
            if (!data || data.length === 0) {
                tbody.innerHTML = '<tr><td colspan="4" class="text-center py-4 text-muted"><i class="bi bi-inbox"></i> No hay datos disponibles</td></tr>';
                return;
            }

            // Usar DocumentFragment para mejor rendimiento
            const fragment = document.createDocumentFragment();
            data.forEach(item => {
                const row = createViewRowElement(item);
                fragment.appendChild(row);
            });

            // Reemplazar todo el contenido de una vez
            tbody.replaceChildren(fragment);
        }

        // Funci√≥n para crear un elemento de fila DOM
        function createViewRowElement(item) {
            const tr = document.createElement('tr');
            
            // Normalizar camelCase vs PascalCase
            const dateAndTime = item.dateAndTime ?? item.DateAndTime;
            const phoneNumber = item.phoneNumber ?? item.PhoneNumber ?? 'N/A';
