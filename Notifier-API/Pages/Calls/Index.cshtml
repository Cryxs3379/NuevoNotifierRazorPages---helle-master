@page
@model CallsIndexModel
@{
    ViewData["Title"] = "Llamadas Perdidas";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-title">
        <h1>
            <i class="bi bi-telephone-fill text-danger me-2"></i>
            Llamadas Perdidas
        </h1>
        <p>Consulta el historial de llamadas perdidas del sistema</p>
    </div>
    <div class="page-header-actions">
        <a asp-page="/Messages/Reply" class="btn btn-primary btn-sm">
            <i class="bi bi-send-fill"></i>
            <span class="d-none d-md-inline">Enviar SMS</span>
            <span class="d-md-none">SMS</span>
        </a>
    </div>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Error:</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

@if (!Model.IsApiAvailable)
{
    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>API no disponible</strong>
        <p class="mb-0">No se puede conectar con la API de llamadas perdidas. Verifica que est√© ejecut√°ndose en: <code>@Model.ApiBaseUrl</code></p>
    </div>
}

<!-- KPI Cards -->
@if (Model.Stats != null)
{
    <div class="row g-3 mb-4" id="statsCards">
        <div class="col-lg-3 col-md-6">
            <div class="card kpi-card border-start border-start-4 border-start-danger">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">Total</p>
                            <h2 class="mb-0 fw-bold" id="statsTotal">@Model.Stats.TotalMissedCalls</h2>
                        </div>
                        <div class="kpi-icon text-danger">
                            <i class="bi bi-telephone-x-fill" style="font-size: 1.4rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card kpi-card border-start border-start-4 border-start-warning">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">Hoy</p>
                            <h2 class="mb-0 fw-bold" id="statsToday">@Model.Stats.TodayMissedCalls</h2>
                        </div>
                        <div class="kpi-icon text-warning">
                            <i class="bi bi-calendar-day-fill" style="font-size: 1.4rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card kpi-card border-start border-start-4 border-start-info">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">Esta Semana</p>
                            <h2 class="mb-0 fw-bold" id="statsWeek">@Model.Stats.ThisWeekMissedCalls</h2>
                        </div>
                        <div class="kpi-icon text-info">
                            <i class="bi bi-calendar-week-fill" style="font-size: 1.4rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card kpi-card border-start border-start-4 border-start-primary">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>
                            <p class="text-muted small mb-1">√öltima llamada</p>
                            <p class="mb-0 fw-semibold"><small id="statsLastCall">@Model.LastCallTime</small></p>
                        </div>
                        <div class="kpi-icon text-primary">
                            <i class="bi bi-clock-history" style="font-size: 1.4rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Filter Bar -->
<div class="filter-bar mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-md-4">
            <label class="form-label">
                <i class="bi bi-list-ul"></i> L√≠mite de registros
            </label>
            <select name="limit" class="form-select" asp-for="Limit">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="200">200</option>
            </select>
        </div>
        
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
        
        <div class="col-md-4">
            <button type="button" class="btn btn-ghost w-100" id="refreshCallsBtn" onclick="refreshCallsPartial()">
                <i class="bi bi-arrow-clockwise" id="refreshCallsIcon"></i> Actualizar
            </button>
        </div>
    </form>
</div>

<!-- Tabla de llamadas perdidas -->
@if (Model.MissedCalls != null && Model.MissedCalls.Any())
{
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-list-ul text-primary"></i>
                <span>Mostrando <strong>@Model.MissedCalls.Count</strong> llamadas perdidas</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-wrapper">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th class="col-datetime">Fecha y Hora</th>
                            <th class="col-phone">Tel√©fono</th>
                            <th class="col-status">Estado</th>
                        </tr>
                    </thead>
                            <tbody id="callsTableBody">
                                <!-- Spinner de carga (oculto inicialmente) -->
                                <tr id="loadingRow" style="display: none;">
                                    <td colspan="3" class="text-center py-4">
                                        <div class="spinner-border text-danger" role="status">
                                            <span class="visually-hidden">Cargando...</span>
                                        </div>
                                        <p class="mt-2 text-muted">Actualizando llamadas...</p>
                                    </td>
                                </tr>
                                <!-- Fila de error (oculta inicialmente) -->
                                <tr id="errorRow" style="display: none;">
                                    <td colspan="3" class="text-center py-4">
                                        <div class="alert alert-danger mb-0">
                                            <i class="bi bi-exclamation-triangle-fill"></i>
                                            <span id="errorMessageText">Error al cargar llamadas</span>
                                            <button type="button" class="btn btn-sm btn-outline-danger ms-2" onclick="refreshCallsPartial()">
                                                Reintentar
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                @foreach (var call in Model.MissedCalls)
                                {
                                    <tr>
                                        <td class="col-datetime">
                                            <div title="@call.DateAndTime.ToString("yyyy-MM-dd HH:mm:ss")">
                                                <strong>@call.DateAndTime.ToString("dd/MM/yyyy")</strong>
                                                <br />
                                                <small class="text-muted">@call.DateAndTime.ToString("HH:mm:ss")</small>
                                            </div>
                                        </td>
                                        <td class="col-phone">
                                            <span class="phone-number">
                                                <i class="bi bi-telephone-fill text-muted"></i>
                                                @call.PhoneNumber
                                            </span>
                                        </td>
                                        <td class="col-status">
                                            <span class="badge bg-info">@(call.StatusText ?? "N/A")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
            </div>
        </div>
    </div>
}
else if (Model.MissedCalls != null)
{
    <div class="card">
        <div class="card-body">
            <div class="empty-state">
                <i class="bi bi-telephone-x"></i>
                <h3>No hay llamadas perdidas</h3>
                <p>No se encontraron llamadas perdidas en el sistema.</p>
            </div>
        </div>
    </div>
}

@section Scripts {
    <!-- SignalR Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    
    <script>
        // Auto-refresh cada 30 segundos (opcional)
        // setTimeout(() => window.location.reload(), 30000);

        // Funci√≥n para formatear tiempo relativo
        function formatRelativeTime(dateTime) {
            const date = new Date(dateTime);
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);
            
            if (minutes < 1) return "Hace unos segundos";
            if (minutes < 60) return `Hace ${minutes} min`;
            if (hours < 24) return `Hace ${hours}h`;
            if (days < 7) return `Hace ${days}d`;
            
            return date.toLocaleString('es-ES', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // Funci√≥n para renderizar una fila de llamada
        function renderCallRow(call) {
            const date = new Date(call.dateAndTime);
            const dateStr = date.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' });
            const timeStr = date.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            const statusText = call.statusText || 'N/A';
            
            return `
                <tr>
                    <td class="col-datetime">
                        <div title="${call.dateAndTime}">
                            <strong>${dateStr}</strong><br>
                            <small class="text-muted">${timeStr}</small>
                        </div>
                    </td>
                    <td class="col-phone">
                        <span class="phone-number">
                            <i class="bi bi-telephone-fill text-muted"></i>
                            ${call.phoneNumber}
                        </span>
                    </td>
                    <td class="col-status">
                        <span class="badge bg-info">${statusText}</span>
                    </td>
                </tr>`;
        }

        // Funci√≥n para refrescar llamadas parcialmente
        async function refreshCallsPartial() {
            const tbody = document.getElementById('callsTableBody');
            const loadingRow = document.getElementById('loadingRow');
            const errorRow = document.getElementById('errorRow');
            const refreshBtn = document.getElementById('refreshCallsBtn');
            const refreshIcon = document.getElementById('refreshCallsIcon');
            
            if (!tbody) return;

            // Ocultar error si existe
            if (errorRow) errorRow.style.display = 'none';
            
            // Mostrar loading
            if (loadingRow) loadingRow.style.display = 'table-row';
            if (refreshBtn) refreshBtn.disabled = true;
            if (refreshIcon) refreshIcon.classList.add('spinner-border', 'spinner-border-sm');
            
            // Ocultar todas las filas de datos temporalmente
            const dataRows = tbody.querySelectorAll('tr:not(#loadingRow):not(#errorRow)');
            dataRows.forEach(row => row.style.display = 'none');

            try {
                // Obtener l√≠mite actual
                const urlParams = new URLSearchParams(window.location.search);
                const limit = urlParams.get('limit') || '100';

                // Actualizar estad√≠sticas
                const statsResponse = await fetch('/api/v1/calls/stats');
                if (statsResponse.ok) {
                    const stats = await statsResponse.json();
                    const totalEl = document.getElementById('statsTotal');
                    const todayEl = document.getElementById('statsToday');
                    const weekEl = document.getElementById('statsWeek');
                    const lastCallEl = document.getElementById('statsLastCall');
                    
                    if (totalEl) totalEl.textContent = stats.totalMissedCalls || 0;
                    if (todayEl) todayEl.textContent = stats.todayMissedCalls || 0;
                    if (weekEl) weekEl.textContent = stats.thisWeekMissedCalls || 0;
                    
                    if (lastCallEl && stats.lastMissedCall) {
                        try {
                            const lastCall = typeof stats.lastMissedCall === 'string' 
                                ? JSON.parse(stats.lastMissedCall) 
                                : stats.lastMissedCall;
                            if (lastCall.dateAndTime) {
                                const lastCallDate = new Date(lastCall.dateAndTime);
                                lastCallEl.textContent = formatRelativeTime(lastCallDate);
                            }
                        } catch (e) {
                            lastCallEl.textContent = 'N/A';
                        }
                    }
                }

                // Actualizar tabla de llamadas
                const callsResponse = await fetch(`/api/v1/calls/missed?limit=${encodeURIComponent(limit)}`);
                
                if (!callsResponse.ok) {
                    throw new Error(`HTTP ${callsResponse.status}: ${callsResponse.statusText}`);
                }

                const callsData = await callsResponse.json();
                
                // Limpiar tbody (excepto loading/error rows)
                dataRows.forEach(row => row.remove());
                
                // Renderizar nuevas filas
                if (callsData.data && callsData.data.length > 0) {
                    callsData.data.forEach(call => {
                        const row = renderCallRow(call);
                        tbody.insertAdjacentHTML('beforeend', row);
                    });
                } else {
                    tbody.insertAdjacentHTML('beforeend', '<tr><td colspan="3" class="text-center py-4 text-muted">No hay llamadas perdidas</td></tr>');
                }
                
                // Inicializar tooltips
                const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                tooltipTriggerList.map(function (tooltipTriggerEl) {
                    return new bootstrap.Tooltip(tooltipTriggerEl);
                });
                
                // Ocultar loading
                if (loadingRow) loadingRow.style.display = 'none';
                
            } catch (error) {
                console.error('Error refreshing calls:', error);
                
                // Mostrar error
                if (errorRow) {
                    const errorText = document.getElementById('errorMessageText');
                    if (errorText) {
                        errorText.textContent = `Error al cargar llamadas: ${error.message}`;
                    }
                    errorRow.style.display = 'table-row';
                }
                
                // Restaurar filas ocultas
                dataRows.forEach(row => row.style.display = '');
                
            } finally {
                // Restaurar bot√≥n
                if (loadingRow) loadingRow.style.display = 'none';
                if (refreshBtn) refreshBtn.disabled = false;
                if (refreshIcon) refreshIcon.classList.remove('spinner-border', 'spinner-border-sm');
            }
        }

        // SignalR Connection para actualizaciones en tiempo real
        // Conectar al hub de Notifier-APiCalls (puerto 5001)
        const apiBaseUrl = "@Model.ApiBaseUrl".replace(/\/$/, "");
        const hubUrl = `${apiBaseUrl}/hubs/messages`;
        
        console.log("Iniciando conexi√≥n SignalR a:", hubUrl);
        
        const callsConnection = new signalR.HubConnectionBuilder()
            .withUrl(hubUrl)
            .withAutomaticReconnect()
            .build();

        // Escuchar evento CallsUpdated
        callsConnection.on("CallsUpdated", () => {
            console.log("CallsUpdated recibido via SignalR desde Notifier-APiCalls");
            
            // Refrescar la p√°gina autom√°ticamente cuando hay nuevas llamadas
            // Usamos refreshCallsPartial para una actualizaci√≥n m√°s suave
            refreshCallsPartial();
        });

        // Iniciar conexi√≥n SignalR
        callsConnection.start()
            .then(() => {
                console.log("‚úÖ SignalR conectado para Calls. Escuchando actualizaciones desde:", hubUrl);
            })
            .catch((err) => {
                console.error("‚ùå Error conectando SignalR para Calls:", err);
                console.error("Hub URL intentada:", hubUrl);
            });

        // Manejar reconexi√≥n
        callsConnection.onreconnecting(() => {
            console.log("üîÑ SignalR reconectando para Calls...");
        });

        callsConnection.onreconnected(() => {
            console.log("‚úÖ SignalR reconectado para Calls");
        });

        callsConnection.onclose(() => {
            console.log("‚ö†Ô∏è Conexi√≥n SignalR cerrada para Calls");
        });
    </script>
}

