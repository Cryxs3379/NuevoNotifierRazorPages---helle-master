                                <tr>
                                    <th>De</th>
                                    <th>Para</th>
                                    <th>Mensaje</th>
                                    <th>Fecha/Hora</th>
                                    <th>ID</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody id="messagesTableBody">
