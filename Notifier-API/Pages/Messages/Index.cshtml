@page
@model MessagesIndexModel
@{
    ViewData["Title"] = "Mensajes SMS";
}

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-title">
        <h1>
            <i class="bi bi-chat-dots-fill text-primary me-2"></i>
            Mensajes SMS
        </h1>
        <p>Consulta y gestiona los mensajes entrantes y enviados</p>
    </div>
    <div class="page-header-actions">
        <button type="button" class="btn btn-ghost btn-sm" id="refreshMessagesBtn" onclick="refreshMessagesPartial()" title="Actualizar mensajes" aria-label="Actualizar mensajes">
            <i class="bi bi-arrow-clockwise" id="refreshMessagesIcon"></i>
            <span class="d-none d-md-inline">Actualizar</span>
        </button>
        <a asp-page="/Messages/Reply" class="btn btn-primary btn-sm">
            <i class="bi bi-send-fill"></i>
            <span class="d-none d-md-inline">Enviar Mensaje</span>
            <span class="d-md-none">Enviar</span>
        </a>
    </div>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Error:</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
    </div>
}

<!-- Filter Bar -->
<div class="filter-bar mb-4">
    <form method="get" class="row g-3 align-items-end">
        <div class="col-lg-3 col-md-6">
            <label class="form-label">
                <i class="bi bi-arrow-left-right"></i> Dirección
            </label>
            <div class="segmented-control">
                <a class="nav-link @(Model.Direction.Equals("inbound", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                   asp-page="/Messages/Index"
                   asp-route-direction="inbound"
                   asp-route-page="1"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-accountRef="@Model.AccountRef">
                    <i class="bi bi-inbox"></i> Entrantes
                </a>
                <a class="nav-link @(Model.Direction.Equals("outbound", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
                   asp-page="/Messages/Index"
                   asp-route-direction="outbound"
                   asp-route-page="1"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-accountRef="@Model.AccountRef">
                    <i class="bi bi-send"></i> Enviados
                </a>
            </div>
        </div>
        
        <div class="col-lg-2 col-md-6">
            <label class="form-label">
                <i class="bi bi-list-ul"></i> Por página
            </label>
            <select name="pageSize" class="form-select" asp-for="PageSize">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
        </div>
        
        <div class="col-lg-4 col-md-8">
            <label class="form-label">
                <i class="bi bi-tag"></i> Account Reference
            </label>
            <input type="text" name="accountRef" class="form-control" placeholder="EX0375657 (opcional)" 
                   value="@Model.AccountRef" />
        </div>
        
        <div class="col-lg-3 col-md-4">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </form>
</div>

