@functions {
    string FormatDate(DateTime dateTime)
    {
        var localTime = dateTime.ToLocalTime();
        var diff = DateTime.Now - localTime;
        
        if (diff.TotalMinutes < 1)
            return "Hace unos segundos";
        if (diff.TotalMinutes < 60)
            return $"Hace {(int)diff.TotalMinutes} min";
        if (diff.TotalHours < 24)
            return $"Hace {(int)diff.TotalHours}h";
        if (diff.TotalDays < 7)
            return $"Hace {(int)diff.TotalDays}d";
            
        return localTime.ToString("dd/MM/yyyy HH:mm");
    }
}

@section Scripts {
    <!-- SignalR Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    
    <script>
        // Estado de la aplicación
        const currentDirection = '@Model.Direction'.toLowerCase();
        const currentPage = @Model.PageNumber;
        const currentTotal = @(Model.Messages?.Total ?? 0);
        const currentCount = @(Model.Messages?.Items.Count ?? 0);
        const isInbound = currentDirection === 'inbound';
        
        // Set de IDs ya presentes en la tabla
        const seenMessageIds = new Set();
        @if (Model.Messages?.Items != null)
        {
            foreach (var message in Model.Messages.Items)
            {
                <text>seenMessageIds.add(@Html.Raw(Json.Serialize(message.Id)));</text>
            }
        }
        
        // Contador de mensajes nuevos no insertados
        let newMessagesCount = 0;

        // SignalR Connection
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hubs/messages")
            .withAutomaticReconnect()
            .build();

        // Función para formatear fecha (similar a C#)
        function formatDate(dateTime) {
            const date = new Date(dateTime);
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);
            
            if (minutes < 1) return "Hace unos segundos";
            if (minutes < 60) return `Hace ${minutes} min`;
            if (hours < 24) return `Hace ${hours}h`;
            if (days < 7) return `Hace ${days}d`;
            
            return date.toLocaleString('es-ES', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // Función para renderizar una fila de mensaje
        function renderMessageRow(message) {
            const from = message.from || 'N/A';
            const to = message.to || 'N/A';
            const messageText = message.message || '';
            const id = message.id || '';
            const receivedUtc = message.receivedUtc || new Date().toISOString();
            const idShort = id.substring(0, Math.min(8, id.length)) + '...';
            
            // Construir URL de responder (inbound: responder a From, outbound: responder a To)
            const replyTo = (isInbound ? from : to);
            const replyToNormalized = replyTo.startsWith('+') ? replyTo : '+' + replyTo;
            const replyUrl = `/Messages/Reply?to=${encodeURIComponent(replyToNormalized)}`;
            
            // Botones
            let actionButtons = `
                <button type="button" class="btn btn-sm btn-outline-info" 
                        data-id="${id}" 
                        onclick="viewFullMessage(this)"
                        title="Ver mensaje completo">
                    <i class="bi bi-eye-fill"></i> Ver
                </button>
                <a href="${replyUrl}" 
                   class="btn btn-sm btn-outline-primary ms-1"
                   title="Responder">
                    <i class="bi bi-reply-fill"></i> Responder
                </a>`;
            
            return `
                <tr data-message-id="${id}" class="table-warning">
                    <td>
                        <span class="phone-number" title="${from}">${from}</span>
                    </td>
                    <td>
                        <span class="phone-number" title="${to}">${to}</span>
                    </td>
                    <td>
                        <div class="text-truncate-custom" title="${messageText}">${messageText}</div>
                    </td>
                    <td>
                        <small class="text-muted" title="${receivedUtc}">${formatDate(receivedUtc)}</small>
                    </td>
                    <td>
                        <code class="text-muted" style="font-size: 0.75rem;" title="${id}">${idShort}</code>
                    </td>
                    <td class="text-center">
                        ${actionButtons}
                    </td>
                </tr>`;
        }

        // Función para insertar un mensaje nuevo en la tabla
        function insertNewMessage(message) {
            if (!message || !message.id) {
                console.warn("Message missing required fields:", message);
                incrementNewMessagesCount();
                return;
            }

            // Verificar si ya existe
            if (seenMessageIds.has(message.id)) {
                console.log("Message already exists, ignoring:", message.id);
                return;
            }

            // Solo insertar si estamos en página 1 y dirección coincide
            if (currentPage !== 1) {
                incrementNewMessagesCount();
                return;
            }

            // Verificar dirección (asumimos que NewMessage siempre es inbound)
            if (!isInbound) {
                incrementNewMessagesCount();
                return;
            }

            // Verificar que tenga campos mínimos
            if (!message.from || !message.to || !message.message) {
                console.warn("Message missing required fields, showing banner instead");
                incrementNewMessagesCount();
                return;
            }

            // Insertar la fila al principio de la tabla
            const tbody = document.getElementById('messagesTableBody');
            if (!tbody) {
                // Si no hay tabla, mostrar banner para que el usuario recargue
                console.log("Table body not found, showing banner instead");
                incrementNewMessagesCount();
                return;
            }

            const newRow = renderMessageRow(message);
            tbody.insertAdjacentHTML('afterbegin', newRow);
            
            // Añadir al set de IDs vistos
            seenMessageIds.add(message.id);
            
            // Actualizar contadores visuales
            updateMessagesCount(currentCount + 1, currentTotal + 1);
            
            // Remover clase de highlight después de 3 segundos
            setTimeout(() => {
                const row = tbody.querySelector(`tr[data-message-id="${message.id}"]`);
                if (row) {
                    row.classList.remove('table-warning');
                }
            }, 3000);
            
            console.log("New message inserted:", message.id);
        }

        // Función para incrementar contador de mensajes nuevos
        function incrementNewMessagesCount() {
            newMessagesCount++;
            showNewMessagesBanner();
        }

        // Función para mostrar banner de mensajes nuevos
        function showNewMessagesBanner() {
            const banner = document.getElementById('newMessagesBanner');
            const countSpan = document.getElementById('newMessagesCount');
            if (banner && countSpan) {
                countSpan.textContent = newMessagesCount;
                banner.style.display = 'block';
                banner.classList.add('show');
            }
        }

        // Función para ocultar banner de mensajes nuevos
        function dismissNewMessagesBanner() {
            newMessagesCount = 0;
            const banner = document.getElementById('newMessagesBanner');
            if (banner) {
                banner.classList.remove('show');
                setTimeout(() => {
                    banner.style.display = 'none';
                }, 150);
            }
        }

        // Función para actualizar contador de mensajes
        function updateMessagesCount(count, total) {
            const countText = document.getElementById('messagesCountText');
            if (countText) {
                const directionText = isInbound ? 'Entrantes' : 'Enviados';
                countText.textContent = `Mostrando ${count} de ${total} mensajes (${directionText})`;
            }
        }

        // Función para refrescar los mensajes (reload manual)
        function refreshMessages() {
            location.reload();
        }

        // Función para refrescar mensajes parcialmente (sin reload)
        async function refreshMessagesPartial() {
            const tbody = document.getElementById('messagesTableBody');
            const loadingRow = document.getElementById('loadingRow');
            const errorRow = document.getElementById('errorRow');
            const refreshBtn = document.getElementById('refreshMessagesBtn');
            const refreshIcon = document.getElementById('refreshMessagesIcon');
            
            if (!tbody) return;

            // Ocultar error si existe
            if (errorRow) errorRow.style.display = 'none';
            
            // Mostrar loading
            if (loadingRow) loadingRow.style.display = 'table-row';
            if (refreshBtn) refreshBtn.disabled = true;
            if (refreshIcon) refreshIcon.classList.add('spinner-border', 'spinner-border-sm');
            
            // Ocultar todas las filas de datos temporalmente
            const dataRows = tbody.querySelectorAll('tr[data-message-id]');
            dataRows.forEach(row => row.style.display = 'none');

            try {
                // Obtener parámetros actuales
                const urlParams = new URLSearchParams(window.location.search);
                const direction = urlParams.get('direction') || 'inbound';
                const page = urlParams.get('currentPage') || '1';
                const pageSize = urlParams.get('pageSize') || '25';
                const accountRef = urlParams.get('accountRef') || '';

                // Construir URL del endpoint
                const apiUrl = `/api/v1/messages?direction=${encodeURIComponent(direction)}&page=${encodeURIComponent(page)}&pageSize=${encodeURIComponent(pageSize)}${accountRef ? '&accountRef=' + encodeURIComponent(accountRef) : ''}`;

                const response = await fetch(apiUrl);
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const data = await response.json();
                
                // Limpiar tbody (excepto loading/error rows)
                dataRows.forEach(row => row.remove());
                
                // Renderizar nuevas filas
                if (data.items && data.items.length > 0) {
                    data.items.forEach(message => {
                        const row = renderMessageRow(message);
                        tbody.insertAdjacentHTML('beforeend', row);
                        // Añadir al set de IDs vistos
                        if (message.id) {
                            seenMessageIds.add(message.id);
                        }
                    });
                } else {
                    // Si no hay mensajes, mostrar mensaje
                    tbody.insertAdjacentHTML('beforeend', '<tr><td colspan="6" class="text-center py-4 text-muted">No hay mensajes para mostrar</td></tr>');
                }

                // Actualizar contador
                updateMessagesCount(data.items?.length || 0, data.total || 0);
                
                // Ocultar loading
                if (loadingRow) loadingRow.style.display = 'none';
                
            } catch (error) {
                console.error('Error refreshing messages:', error);
                
                // Mostrar error
                if (errorRow) {
                    const errorText = document.getElementById('errorMessageText');
                    if (errorText) {
                        errorText.textContent = `Error al cargar mensajes: ${error.message}`;
                    }
                    errorRow.style.display = 'table-row';
                }
                
                // Restaurar filas ocultas
                dataRows.forEach(row => row.style.display = '');
                
            } finally {
                // Restaurar botón
                if (loadingRow) loadingRow.style.display = 'none';
                if (refreshBtn) refreshBtn.disabled = false;
                if (refreshIcon) refreshIcon.classList.remove('spinner-border', 'spinner-border-sm');
            }
        }

        // Actualizar estado de conexión SignalR
        function updateSignalRStatus(status, text) {
            const statusIcon = document.getElementById('signalRStatusIcon');
            const statusText = document.getElementById('signalRStatusText');
            
            if (statusIcon && statusText) {
                statusIcon.className = 'bi bi-circle-fill';
                statusText.textContent = text;
                
                if (status === 'connected') {
                    statusIcon.classList.add('text-success');
                } else if (status === 'reconnecting') {
                    statusIcon.classList.add('text-warning');
                } else {
                    statusIcon.classList.add('text-danger');
                }
            }
        }

        // Suscribirse a eventos de SignalR
        connection.on("NewMessage", (message) => {
            console.log("New message received via SignalR:", message);
            insertNewMessage(message);
        });

        // Manejar errores de base de datos
        connection.on("DbError", (errorMessage) => {
            console.error("Database error received via SignalR:", errorMessage);
            showDbError(errorMessage);
        });

        // Manejar errores de borrado en Esendex
        connection.on("EsendexDeleteError", (errorMessage) => {
            console.warn("Esendex delete error received via SignalR:", errorMessage);
            showEsendexDeleteError(errorMessage);
        });

        // Función para mostrar error de BD
        function showDbError(message) {
            const banner = document.getElementById('dbErrorBanner');
            const errorText = document.getElementById('dbErrorText');
            if (banner && errorText) {
                errorText.textContent = message;
                banner.style.display = 'block';
                banner.classList.add('show');
                
                // Auto-ocultar después de 10 segundos
                setTimeout(() => {
                    banner.classList.remove('show');
                    setTimeout(() => {
                        banner.style.display = 'none';
                    }, 150);
                }, 10000);
            }
        }

        // Función para mostrar error de borrado en Esendex
        function showEsendexDeleteError(message) {
            const banner = document.getElementById('esendexDeleteErrorBanner');
            const errorText = document.getElementById('esendexDeleteErrorText');
            if (banner && errorText) {
                errorText.textContent = message;
                banner.style.display = 'block';
                banner.classList.add('show');
                
                // Auto-ocultar después de 15 segundos (más tiempo porque es warning, no error crítico)
                setTimeout(() => {
                    banner.classList.remove('show');
                    setTimeout(() => {
                        banner.style.display = 'none';
                    }, 150);
                }, 15000);
            }
        }

        // Iniciar conexión
        connection.start()
            .then(() => {
                console.log("SignalR connected to /hubs/messages");
                updateSignalRStatus('connected', 'Conectado');
            })
            .catch((err) => {
                console.error("SignalR connection error:", err);
                updateSignalRStatus('disconnected', 'Desconectado');
            });

        // Manejar reconexión
        connection.onreconnecting(() => {
            console.log("SignalR reconnecting...");
            updateSignalRStatus('reconnecting', 'Reintentando...');
        });

        connection.onreconnected(() => {
            console.log("SignalR reconnected");
            updateSignalRStatus('connected', 'Conectado');
        });

        connection.onclose(() => {
            console.log("SignalR connection closed");
            updateSignalRStatus('disconnected', 'Desconectado');
        });

        async function viewFullMessage(btn) {
            const id = btn.getAttribute('data-id');
            if (!id) return;

            const modal = new bootstrap.Modal(document.getElementById('messageModal'));
            modal.show();

            // Reset modal state
            document.getElementById('messageLoading').style.display = 'block';
            document.getElementById('messageContent').style.display = 'none';
            document.getElementById('messageError').style.display = 'none';

            try {
                const res = await fetch(`/api/v1/db/messages/${encodeURIComponent(id)}`);
                
                if (res.ok) {
                    const message = await res.json();
                    
                    // Populate modal with message data
                    document.getElementById('messageFrom').textContent = message.from || 'N/A';
                    document.getElementById('messageTo').textContent = message.to || 'N/A';
                    // Usar el ID del botón para mantener consistencia con el listado
                    document.getElementById('messageId').textContent = id;
                    
                    // Format date
                    const date = new Date(message.receivedUtc);
                    document.getElementById('messageDate').textContent = date.toLocaleString('es-ES', {
                        year: 'numeric',
                        month: '2-digit',
                        day: '2-digit',
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit'
                    });

                    // Show message body (preserve line breaks)
                    const messageBody = document.getElementById('messageBody');
                    messageBody.textContent = message.message || 'Sin contenido';
                    messageBody.style.whiteSpace = 'pre-wrap';
                    messageBody.style.wordBreak = 'break-word';

                    document.getElementById('messageLoading').style.display = 'none';
                    document.getElementById('messageContent').style.display = 'block';
                } else if (res.status === 404) {
                    document.getElementById('messageLoading').style.display = 'none';
                    document.getElementById('messageError').style.display = 'block';
                    document.getElementById('messageErrorText').textContent = 'Mensaje no encontrado.';
                } else {
                    const errorData = await res.json().catch(() => ({ error: 'Error desconocido' }));
                    document.getElementById('messageLoading').style.display = 'none';
                    document.getElementById('messageError').style.display = 'block';
                    document.getElementById('messageErrorText').textContent = errorData.error || 'Error al cargar el mensaje.';
                }
            } catch (error) {
                console.error('Error loading message:', error);
                document.getElementById('messageLoading').style.display = 'none';
                document.getElementById('messageError').style.display = 'block';
                document.getElementById('messageErrorText').textContent = 'Error de red al cargar el mensaje.';
            }
        }

        async function deleteMessage(btn){
            const id = btn.getAttribute('data-id');
            if (!id) return;
            if (!confirm('¿Eliminar este mensaje en Esendex?')) return;
            try {
                const res = await fetch(`/api/v1/messages/${encodeURIComponent(id)}`, { method: 'DELETE' });
                if (res.status === 204) {
                    location.reload();
                } else {
                    alert('No se pudo eliminar el mensaje (ver logs).');
                }
            } catch {
                alert('Error de red eliminando el mensaje.');
            }
        }
    </script>
