@page
@model MessagesIndexModel
@{
    ViewData["Title"] = "Mensajes SMS";
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="bi bi-chat-dots-fill text-primary"></i>
            Mensajes SMS
        </h2>
        <p class="text-muted">Consulta los mensajes entrantes y enviados</p>
    </div>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Error:</strong> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<ul class="nav nav-pills mb-3">
  <li class="nav-item">
    <a class="nav-link @(Model.Direction.Equals("inbound", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
       asp-page="/Messages/Index"
       asp-route-direction="inbound"
       asp-route-page="1"
       asp-route-pageSize="@Model.PageSize"
       asp-route-accountRef="@Model.AccountRef">
      Entrantes
    </a>
  </li>
  <li class="nav-item">
    <a class="nav-link @(Model.Direction.Equals("outbound", StringComparison.OrdinalIgnoreCase) ? "active" : "")"
       asp-page="/Messages/Index"
       asp-route-direction="outbound"
       asp-route-page="1"
       asp-route-pageSize="@Model.PageSize"
       asp-route-accountRef="@Model.AccountRef">
      Enviados
    </a>
  </li>
  <li class="nav-item ms-2 align-self-center text-muted small">
    @(Model.Direction.Equals("inbound", StringComparison.OrdinalIgnoreCase) ? "Mostrando entrantes" : "Mostrando enviados")
  </li>
</ul>

<div class="row mb-4">
    <div class="col-12">
        <div class="card filter-card">
            <div class="card-body">
                <form method="get" class="row g-3">
                    <div class="col-md-3 col-sm-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-arrow-left-right"></i> Dirección
                        </label>
                        <select name="direction" class="form-select" asp-for="Direction">
                            <option value="inbound">Entrantes</option>
                            <option value="outbound">Enviados</option>
                        </select>
                    </div>
                    
                    <div class="col-md-3 col-sm-6">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-list-ul"></i> Mensajes por página
                        </label>
                        <select name="pageSize" class="form-select" asp-for="PageSize">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                    
                    <div class="col-md-4 col-sm-12">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-tag"></i> Account Reference (opcional)
                        </label>
                        <input type="text" name="accountRef" class="form-control" placeholder="EX0375657" 
                               value="@Model.AccountRef" />
                    </div>
                    
                    <div class="col-md-2 col-sm-12 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> <span class="d-none d-sm-inline">Buscar</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (Model.Messages != null && Model.Messages.Items.Any())
{
    <div class="row">
        <div class="col-12">
            <!-- Banner de error de BD (oculto inicialmente) -->
            <div id="dbErrorBanner" class="alert alert-danger alert-dismissible fade" role="alert" style="display: none;">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Error de Base de Datos:</strong> <span id="dbErrorText"></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            
            <!-- Banner de error de borrado en Esendex (oculto inicialmente) -->
            <div id="esendexDeleteErrorBanner" class="alert alert-warning alert-dismissible fade" role="alert" style="display: none;">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Advertencia:</strong> <span id="esendexDeleteErrorText"></span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            
            <!-- Banner de mensajes nuevos (oculto inicialmente) -->
            <div id="newMessagesBanner" class="alert alert-info alert-dismissible fade" role="alert" style="display: none;">
                <i class="bi bi-bell-fill"></i>
                <strong>Han llegado <span id="newMessagesCount">0</span> mensaje(s) nuevo(s)</strong>
                <button type="button" class="btn btn-sm btn-primary ms-2" onclick="refreshMessages()">
                    <i class="bi bi-arrow-clockwise"></i> Cargar ahora
                </button>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" onclick="dismissNewMessagesBanner()"></button>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex flex-wrap justify-content-between align-items-center gap-2">
                    <div class="d-flex flex-wrap align-items-center gap-2">
                        <i class="bi bi-list-ul fs-5"></i>
                        <span id="messagesCountText" class="fw-semibold">
                            Mostrando @Model.Messages.Items.Count de @Model.Messages.Total mensajes
                            (@(Model.Direction == "inbound" ? "Entrantes" : "Enviados"))
                        </span>
                        <span id="signalRStatus" class="badge bg-light text-dark" style="font-size: 0.75rem;">
                            <i class="bi bi-circle-fill" id="signalRStatusIcon"></i> <span id="signalRStatusText">Conectando...</span>
                        </span>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-light btn-sm" id="refreshMessagesBtn" onclick="refreshMessagesPartial()" title="Actualizar mensajes">
                            <i class="bi bi-arrow-clockwise" id="refreshMessagesIcon"></i> 
                            <span class="d-none d-md-inline">Actualizar</span>
                        </button>
                        <a asp-page="/Messages/Reply" class="btn btn-light btn-sm">
                            <i class="bi bi-send-fill"></i> 
                            <span class="d-none d-md-inline">Enviar Mensaje</span>
                            <span class="d-md-none">Enviar</span>
                        </a>
                    </div>
                </div>
                <div class="card-body p-0">
                    <!-- Tabla Desktop/Tablet -->
                    <div class="messages-table-wrapper">
                        <div class="table-responsive">
                            <table class="table messages-table">
                                <thead>
                                    <tr>
                                        <th style="width: 8%;">ID</th>
                                        <th style="width: 12%;">Enviado por</th>
                                        <th style="width: 12%;">De</th>
                                        <th style="width: 12%;">Para</th>
                                        <th style="width: 28%;">Mensaje</th>
                                        <th style="width: 12%;">Fecha/Hora</th>
                                        <th class="text-center" style="width: 16%;">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody id="messagesTableBody">
                                    <!-- Spinner de carga (oculto inicialmente) -->
                                    <tr id="loadingRow" style="display: none;">
                                        <td colspan="7" class="text-center py-4">
                                            <div class="spinner-border text-primary" role="status">
                                                <span class="visually-hidden">Cargando...</span>
                                            </div>
                                            <p class="mt-2 text-muted">Actualizando mensajes...</p>
                                        </td>
                                    </tr>
                                    <!-- Fila de error (oculta inicialmente) -->
                                    <tr id="errorRow" style="display: none;">
                                        <td colspan="7" class="text-center py-4">
                                            <div class="alert alert-danger mb-0">
                                                <i class="bi bi-exclamation-triangle-fill"></i>
                                                <span id="errorMessageText">Error al cargar mensajes</span>
                                                <button type="button" class="btn btn-sm btn-outline-danger ms-2" onclick="refreshMessagesPartial()">
                                                    Reintentar
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    @foreach (var message in Model.Messages.Items)
                                    {
                                        var messagePreview = message.Message?.Length > 80 ? message.Message.Substring(0, 80) + "..." : message.Message;
                                        var isTruncated = message.Message?.Length > 80;
                                        <tr data-message-id="@message.Id">
                                            <td>
                                                <code class="message-card-id" title="@message.Id">
                                                    @message.Id.ToString().Substring(Math.Max(0, message.Id.Length - 8))
                                                </code>
                                            </td>
                                            <td>
                                                <small class="message-card-sentby">
                                                    @(string.IsNullOrWhiteSpace(message.SentBy) ? "-" : message.SentBy)
                                                </small>
                                            </td>
                                            <td>
                                                <span class="phone-number" title="@message.From">
                                                    @message.From
                                                </span>
                                            </td>
                                            <td>
                                                <span class="phone-number" title="@message.To">
                                                    @message.To
                                                </span>
                                            </td>
                                            <td>
                                                <div class="message-preview-container">
                                                    <span class="message-preview-text" data-full-text="@message.Message" data-id="@message.Id">
                                                        @messagePreview
                                                    </span>
                                                    @if (isTruncated)
                                                    {
                                                        <button type="button" class="btn btn-link btn-sm p-0 ms-1 text-primary message-toggle-btn" 
                                                                data-id="@message.Id" 
                                                                onclick="toggleMessage(this)"
                                                                title="Ver mensaje completo">
                                                            <small>ver más</small>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <small class="text-muted" title="@message.ReceivedUtc.ToString("O")">
                                                    @(FormatDate(message.ReceivedUtc))
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-action-group">
                                                    <button type="button" class="btn btn-outline-info btn-action" 
                                                            data-id="@message.Id" 
                                                            onclick="viewFullMessage(this)"
                                                            title="Ver mensaje completo">
                                                        <i class="bi bi-eye-fill"></i>
                                                        <span class="btn-label">Ver</span>
                                                    </button>
                                                    @{
                                                        var replyTo = Model.Direction == "inbound" ? message.From : message.To;
                                                        if (!string.IsNullOrWhiteSpace(replyTo) && !replyTo.StartsWith("+"))
                                                        {
                                                            replyTo = "+" + replyTo;
                                                        }
                                                    }
                                                    <a asp-page="/Messages/Reply" 
                                                       asp-route-to="@replyTo" 
                                                       class="btn btn-outline-primary btn-action"
                                                       title="Responder">
                                                        <i class="bi bi-reply-fill"></i>
                                                        <span class="btn-label">Responder</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <!-- Cards Móvil -->
                    <div class="messages-cards-container" id="messagesCardsContainer">
                        @foreach (var message in Model.Messages.Items)
                        {
                            var messagePreview = message.Message?.Length > 100 ? message.Message.Substring(0, 100) + "..." : message.Message;
                            var isTruncated = message.Message?.Length > 100;
                            var replyTo = Model.Direction == "inbound" ? message.From : message.To;
                            if (!string.IsNullOrWhiteSpace(replyTo) && !replyTo.StartsWith("+"))
                            {
                                replyTo = "+" + replyTo;
                            }
                            <div class="message-card" data-message-id="@message.Id">
                                <div class="message-card-header">
                                    <div>
                                        <span class="message-card-id">ID: @message.Id.ToString().Substring(Math.Max(0, message.Id.Length - 8))</span>
                                    </div>
                                    <div>
                                        <span class="message-card-sentby">@(string.IsNullOrWhiteSpace(message.SentBy) ? "-" : message.SentBy)</span>
                                    </div>
                                </div>
                                <div class="message-card-body">
                                    <div class="message-card-phone">
                                        <span class="message-card-phone-label">De:</span>
                                        <span class="phone-number">@message.From</span>
                                    </div>
                                    <div class="message-card-phone">
                                        <span class="message-card-phone-label">Para:</span>
                                        <span class="phone-number">@message.To</span>
                                    </div>
                                    <div class="message-card-message">
                                        <span class="message-preview-text" data-full-text="@message.Message" data-id="@message.Id">
                                            @messagePreview
                                        </span>
                                        @if (isTruncated)
                                        {
                                            <button type="button" class="btn btn-link btn-sm p-0 ms-1 text-primary message-toggle-btn" 
                                                    data-id="@message.Id" 
                                                    onclick="toggleMessage(this)"
                                                    title="Ver mensaje completo">
                                                <small>ver más</small>
                                            </button>
                                        }
                                    </div>
                                </div>
                                <div class="message-card-footer">
                                    <span class="message-card-date" title="@message.ReceivedUtc.ToString("O")">
                                        @(FormatDate(message.ReceivedUtc))
                                    </span>
                                    <div class="message-card-actions">
                                        <button type="button" class="btn btn-outline-info btn-action" 
                                                data-id="@message.Id" 
                                                onclick="viewFullMessage(this)"
                                                title="Ver mensaje completo">
                                            <i class="bi bi-eye-fill"></i>
                                            <span class="btn-label">Ver</span>
                                        </button>
                                        <a asp-page="/Messages/Reply" 
                                           asp-route-to="@replyTo" 
                                           class="btn btn-outline-primary btn-action"
                                           title="Responder">
                                            <i class="bi bi-reply-fill"></i>
                                            <span class="btn-label">Responder</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <!-- Paginación -->
                    <nav aria-label="Navegación de mensajes">
                        <ul class="pagination justify-content-center mb-0">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-page="/Messages/Index" 
                                       asp-route-currentPage="1" 
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-direction="@Model.Direction"
                                       asp-route-accountRef="@Model.AccountRef">
                                        <i class="bi bi-chevron-double-left"></i> Primera
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" asp-page="/Messages/Index" 
                                       asp-route-currentPage="@(Model.PageNumber - 1)" 
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-direction="@Model.Direction"
                                       asp-route-accountRef="@Model.AccountRef">
                                        <i class="bi bi-chevron-left"></i> Anterior
                                    </a>
                                </li>
                            }
                            
                            <li class="page-item active">
                                <span class="page-link">
                                    Página @Model.PageNumber de @Model.TotalPages
                                </span>
                            </li>
                            
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-page="/Messages/Index" 
                                       asp-route-currentPage="@(Model.PageNumber + 1)" 
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-direction="@Model.Direction"
                                       asp-route-accountRef="@Model.AccountRef">
                                        Siguiente <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" asp-page="/Messages/Index" 
                                       asp-route-currentPage="@Model.TotalPages" 
                                       asp-route-pageSize="@Model.PageSize"
                                       asp-route-direction="@Model.Direction"
                                       asp-route-accountRef="@Model.AccountRef">
                                        Última <i class="bi bi-chevron-double-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
}
