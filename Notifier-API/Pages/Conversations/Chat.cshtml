@page
@model NotifierAPI.Pages.Conversations.ChatModel
@{
    ViewData["Title"] = "Chat";
}

<div class="container-xxl py-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <div>
            <h1 class="h4 mb-1">Conversación</h1>
            <div class="text-muted">Teléfono: @Model.Phone</div>
        </div>
        <a class="btn btn-outline-secondary" href="/Conversations">
            <i class="bi bi-arrow-left"></i>
            Volver
        </a>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
    {
        <div class="alert alert-warning">@Model.ErrorMessage</div>
    }

    <div class="card mb-3">
        <div class="card-body p-0">
            <div class="p-3" style="max-height: 480px; overflow-y: auto;">
                @if (Model.Messages.Count == 0)
                {
                    <div class="text-muted">No hay mensajes en esta conversación.</div>
                }
                else
                {
                    foreach (var message in Model.Messages)
                    {
                        var isOutbound = message.Direction == 1;
                        var alignment = isOutbound ? "justify-content-end" : "justify-content-start";
                        var bubbleClass = isOutbound ? "bg-primary text-white" : "bg-light";
                        <div class="d-flex @alignment mb-2">
                            <div class="p-2 rounded-3 @bubbleClass" style="max-width: 75%;">
                                <div class="small">@message.Body</div>
                                <div class="small opacity-75 mt-1 d-flex gap-2">
                                    <span>@message.MessageAt?.ToString("g")</span>
                                    @if (!string.IsNullOrWhiteSpace(message.SentBy))
                                    {
                                        <span>- @message.SentBy</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    @if (Model.QuickReplies.Count > 0)
    {
        <div class="card mb-3">
            <div class="card-body">
                <div class="d-flex flex-wrap align-items-center gap-2">
                    <span class="text-muted small">Respuestas rapidas:</span>
                    @foreach (var reply in Model.QuickReplies)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-primary quick-reply-btn"
                                data-message="@reply.Message">
                            @reply.Label
                        </button>
                    }
                </div>
            </div>
        </div>
    }

    <form method="post" asp-page-handler="Send">
        <input type="hidden" asp-for="Phone" />
        <div class="row g-2">
            <div class="col-12 col-md-8">
                <textarea class="form-control" asp-for="NewMessage" rows="3" placeholder="Escribe un mensaje..."></textarea>
            </div>
            <div class="col-12 col-md-4">
                <input type="text" class="form-control mb-2" asp-for="SentBy" placeholder="Enviado por (opcional)" />
                <button class="btn btn-primary w-100" type="submit">
                    <i class="bi bi-send-fill"></i>
                    Enviar
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var buttons = document.querySelectorAll(".quick-reply-btn");
            if (!buttons.length) return;
            var textarea = document.getElementById("NewMessage");
            if (!textarea) return;

            buttons.forEach(function (btn) {
                btn.addEventListener("click", function () {
                    var message = btn.getAttribute("data-message") || "";
                    textarea.value = message;
                    textarea.focus();
                });
            });
        });
    </script>
}
