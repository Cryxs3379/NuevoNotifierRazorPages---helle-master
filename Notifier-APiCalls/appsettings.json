{
  "ConnectionStrings": {
    "DefaultConnection": "Server=dbserver;Database=NewNotifier;Integrated Security=true;TrustServerCertificate=True;Connection Timeout=30;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CallsWatcher": {
    "Enabled": true,
    "PollSeconds": 3,
    "MaxBatch": 50
  },
  "NotifierApi": {
    "BaseUrl": "http://localhost:5080",
    "CallsNotifyPath": "/api/v1/internal/calls/notify",
    "ApiKey": "notifier-internal-key-2024"
  },
  "CallsIngest": {
    "WatchPath": "\\\\fileserver\\\\Ptrujillo\\\\Procesados",
    "ProcessedPath": "\\\\fileserver\\\\Ptrujillo\\\\Procesados\\\\Processed",
    "ErrorPath": "\\\\fileserver\\\\Ptrujillo\\\\Procesados\\\\Error",
    "FileExtensions": [".csv", ".xlsx"],
    "PollingSeconds": 5,
    "MaxReadAttempts": 10,
    "ReadRetryDelayMs": 300,
    "BulkInsertBatchSize": 2000
  }
}
